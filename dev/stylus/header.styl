	ul
		&.menu
			margin: 0
			padding: 0
			display: block
			list-style: none
.sticky-section
	flex: 1 0 auto
// Header
.header
	width: 100%
	padding-top: 30px
	padding-bottom: 30px
	flex: 0 0 auto
	background-color: transparent
	position: absolute
	z-index: 10
	.row
		align-items: center
.header__logo
	display: inline-block
	margin-left: 15px
	a
		color: #fff
		fz(34)
		font-family: $font_main_regular
		&:hover
			text-decoration: none
.header__nav
	display: inline-block
	position: relative
	margin-left: auto
	margin-right: auto
	ul
		li
			list-style: none
			display: inline-block
			a
				margin-right: 15px
				color: #fff
				fz(16)
				text-decoration: none
				transition: .5s
				&:hover
					color: $main_color
					text-decoration: none
				&:active
					color: $main_color
					text-decoration: none
				&:focus
					color: $main_color
					text-decoration: none

.header__modal
	display: inline-block
	&.last
		a
			&:after
				css-triangle(#fff,up,10px)
				top: calc(50% - 5px)
				right: -20px
				transition: 0.5s
			&:hover:after
				transform: rotate(180deg)
	a
		margin-left: 15px
		padding: 10px 15px
		font(#fff, 17, $font_main_regular)
		border: 2px solid #FFF
		border-radius: 10px
		text-decoration: none
		transition: .5s
		position: relative
		&:hover
			border: 2px solid transparent
			background-color: #ff9600
			color: #fff

// Пример checkbox
@keyframes checkColor
	from
		color: #727272
	to
		color: $main_color
@keyframes checkColorBack
	from
		color: $main_color
	to
		color: #000
label.check, label.radio
	display: inline-flex
	align-items: center
	color: #000
	cursor: pointer
	font-size: 14px
	user-select: none
	i
		width: 11px
		display: inline-flex
		margin-right: 10px
		font-size: 14px
		animation: checkColorBack
		animation-duration: 0.7s
		animation-direction alternate
		animation-fill-mode forwards
	span
		display: inline-block
		font-size: 14px
	input[type=checkbox],
	input[type=radio]
		position: absolute
		clip: rect(0 0 0 0)
		width: 1px
		height: 1px
		margin: -1px
		&:not(:checked)  ~ .fa-2
			display: none
		&:checked ~ i
			&.fa-1
				display: none
			&.fa-2
				display: inline-flex
				animation: checkColor
				animation-duration: 0.7s
				animation-direction alternate
				animation-fill-mode forwards
.visually-hidden
	position: absolute
	clip: rect(0 0 0 0)
	width: 1px
	height: 1px
	margin: -1px
