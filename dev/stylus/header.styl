	font($main_color, 28, $font_main_regular, 1.2)
	margin-bottom: 0.83em
	margin-top: 0.83em
h2
	margin-bottom: 0.83em
	margin-top: 0.83em
p,ul
	padding: 0
	margin: 0
li
	list-style: none

.noselect
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

// оформление общего вид select
.select
	position: relative
	text-align: left
	.select__static-txt
		position: absolute
		top: 48%
		left: 15px
		transform translateY(-50%)
		cursor: pointer
		pointer-events: none
		z-index: 1
	.select__drop
		width: 100%
		max-height: 200px
		overflow auto
		margin: 0 auto
		padding: 0
		border-top: none
		display: none
		position: absolute
		background-color: #F4F4F4
		top: 100%
		left: 0
		right: 0
		z-index: 12
		li
			list-style: none
			border-bottom: none
			border-top: none
			cursor: pointer
			display: block
			font($auxiliary_txt_color, 18, $font_main_regular, 1.2)
			padding: 7px 15px 7px 25px
			transition: 0.5s
			&:hover
				background-color: rgba(0,0,0,0.2)
				outline: 0
			a
				text-decoration: none
		//внешний вид скроллбара
		scrollbar-base-color: $main_color   //для IE
		scrollbar-arrow-color: $main_color	//для IE
		//внешний вид скроллбара для -webkit- остальное тут https://poselab.com/en/blog/custom-scrollbars-in-webkit/
		&::-webkit-scrollbar
			width: 5px
		&::-webkit-scrollbar-thumb
			background-color: $main_color
			&:hover
				background-color: darken($main_color, 10%)
		&::-webkit-scrollbar-track-piece
			background-color: lighten($main_color, 60%)
	.select__link
		width: 100%
		height: 40px
		padding-left: 25px
		padding-right: 30px
		display: flex
		align-items: center
		font(#fff, 18, $font_main_regular, 1.2)
		background-color: rgba(0,0,0,0.6)
		text-decoration: none
		position: relative
		transition: color 0.5s, background-color 0.5s
		&.active
			color: #000
			background-color: #F4F4F4
		span
			overflow: hidden
			white-space: nowrap
			text-overflow: ellipsis
			-o-text-overflow: ellipsis
	.select__arrow
		display: flex
		align-items: center
		position: absolute
		top: 50%
		right: 10px
		cursor: pointer
		transform: translateY(-45%)
		z-index: 10
		i
			fz(24)
			color: #000
			display: inline-flex
			position: relative
			z-index: 10
			transition: 0.3s
		&.active i
			transform: rotate(180deg)
