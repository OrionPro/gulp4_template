@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'
@import '../libs/autocomplete.style.css'

[canvas]
	transform: inherit
// Модальное окно
.white-popup
	width: 470px
	margin: auto
	max-width: 50em
	padding: 50px 46px 50px 46px
	text-align: center
	position: relative
	background-color: #fff
	border-radius: 5px
	transition: 0.5s
	p.modal-title
		font($main_txt_color, 24, $font_main_regular, 1.4)
	p.modal-paragraph
		margin-bottom: 10px
		font($main_txt_color, 14, $font_main_regular, 1.4)
	&#popup-success
		p.success_mail
			display: block
		.mfp-close
			display: none
	&#popup3
		width: inherit
		padding: 0
		border: none
		background-color: transparent
		ul
			padding: 0
		li
			list-style: none
			a
				font-size: 30px
				color: #fff
		.mfp-close
			display: none
	.input-wrap
		position: relative
		display: block
		margin-bottom: 10px
		&>i
			display: none
			position: absolute
			top: 50%
			right: 16px
			transform translateY(-45%)
			fz(14)
			color: #35be70
	label
		margin-bottom: 7px
		margin-left: 5px
		text-align: left
		display: block
		font-family: $font_main_regular
		fz(14)
		color: $main_txt_color
		&.active
			color: $main_color
	input
		width: 100%
		height: 40px
		padding-left: 20px
		padding-right: 37px
		color: #3a4763
		fz(14)
		border: 1px solid #cdcdcd
		background-color: #ffffff
		border-radius: 5px
		transition: 1s
		&:focus
			outline: 0
	textarea
		width: 100%
		min-height: 100px
		margin-bottom: 10px
		padding-left: 20px
		padding-right: 37px
		color: #3a4763
		fz(14)
		border: 1px solid #cdcdcd
		background-color: #ffffff
		border-radius: 5px
		transition: 1s
		&:focus
			outline: 0
	.success_mail
		font($main_color, 24, $font_main_regular, 1.1)
		display: none
		&.active
			display: block
	input[type=submit]
		margin-bottom: 0
		margin-top: 20px
		padding-left: 0
		padding-right: 0
		cursor: pointer
		@extend .main-btn
		&:focus
			outline: 0
	.select
		position: relative
		text-align: left
		margin-bottom: 30px
		.select__drop
			width: 100%
			max-height: 200px
			overflow auto
			margin: 0 auto
			padding: 0
			border-top: none
			display: none
			position: absolute
			background-color: #F4F4F4
			top: 100%
			left: 0
			right: 0
			z-index: 12
			li
				display: flex
				align-items: center
				list-style: none
				border-bottom: none
				border-top: none
				cursor: pointer
				font($auxiliary_txt_color, 18, $font_main_regular, 1.2)
				padding: 7px 15px 7px 25px
				&:hover
					background-color: rgba(0,0,0,0.2)
					outline: 0
				a
					text-decoration: none
				img
					margin-right: 10px
			//внешний вид скроллбара
			scrollbar-base-color: $main_color   //для IE
			scrollbar-arrow-color: $main_color	//для IE
			//внешний вид скроллбара для -webkit- остальное тут https://poselab.com/en/blog/custom-scrollbars-in-webkit/
			&::-webkit-scrollbar
				width: 5px
			&::-webkit-scrollbar-thumb
				background-color: $main_color
				&:hover
					background-color: darken($main_color, 10%)
			&::-webkit-scrollbar-track-piece
				background-color: lighten($main_color, 60%)
		.select__link
			width: 100%
			height: 40px
			padding-left: 25px
			padding-right: 30px
			display: flex
			align-items: center
			font(#000, 18, $font_main_regular, 1.2)
			background-color: #F4F4F4
			box-shadow: 0 1px 0 rgba(0,0,2,.28)
			text-decoration: none
			position: relative
			transition: color 1s
			&.active
				color: #000
				background-color: #F4F4F4
			span
				overflow: hidden
				white-space: nowrap
				text-overflow: ellipsis
				-o-text-overflow: ellipsis
			img
				margin-right: 10px
		.select__arrow
			position: absolute
			top: 50%
			right: 10px
			cursor: pointer
			transform: translateY(-45%)
			z-index: 10
			i
				fz(24)
				color: #000
				display: inline-block
				position: relative
				z-index: 10
				transition: 0.3s
			&.active i
				transform: rotate(180deg)
.mfp-zoom-in.mfp-ready.mfp-bg
	opacity: 0.7
.mfp-bg
	background: rgba(11, 11, 11, 0.46)
.mfp-close-btn-in .mfp-close
	position: absolute
	right: 10px
	top: -30px
	display: block
	color: transparent
	transition: top 0.5s
	&:hover i
		color: $main_color
	i
		color: #ffffff
		transition: color 0.5s
		fz(18)
	&:hover
		outline: 0
	&:active
		outline: 0
	&:focus
		outline: 0
// конец модального
// для формы normal обёртка и иконка success
.input-wrap
	position: relative
	display: block
	&>i
		display: none
		position: absolute
		top: 50%
		right: 16px
		transform translateY(-45%)
		font-size: 14px
		color: #35be70
#form-file
	.file_wrap
		margin-bottom: 20px
// Общие стили на select2
.select2-wrap
	width: 100%
	text-align: left
.select2-container--default
	&.select2-container--open
		.select2-selection--single
			.select2-selection__arrow
				b
					border-color: transparent transparent $main_color transparent
	.select2-selection--single
		border-radius: 15px
		outline-color: transparent
		transition: border 0.5s
		&:hover
			border: 1px solid $main_color
		&:active
			border: 1px solid $main_color
		&:focus
			border: 1px solid $main_color
		.select2-selection__arrow
			b
				border-color: $main_color transparent transparent transparent
				left: 0
.select2-container--default .select2-search--dropdown .select2-search__field
	&:hover
		outline-color: $main_color
	&:active
		outline-color: $main_color
	&:focus
		outline-color: $main_color
.select2-container--default .select2-selection--single
	font-size: 14px
	line-height: 27px
	padding-left: 20px
	outline-color: transparent
	&:hover
		outline-color: transparent
	&:active
		outline-color: transparent
	&:focus
		outline none
		outline-color: transparent
.select2-container--default .select2-results__option
	font-size: 14px
	truncate(100%)
	padding-left: 28px
	transition: 0.3s
	span
		truncate(100%)
		display: inline-block
.select2-container--default .select2-results__option--highlighted[aria-selected]
	background-color: $main_color
.select2-container--default .select2-results>.select2-results__options
	//внешний вид скроллбара
	scrollbar-base-color: $main_color   //для IE
	scrollbar-arrow-color: $main_color	//для IE
	//внешний вид скроллбара для -webkit- остальное тут https://poselab.com/en/blog/custom-scrollbars-in-webkit/
	&::-webkit-scrollbar
		width: 5px
	&::-webkit-scrollbar-thumb
		background-color: $main_color
		&:hover
			background-color: darken($main_color, 10%)
	&::-webkit-scrollbar-track-piece
		background-color: lighten($main_color, 60%)
// Бутерброд
.no-touch #nav-button-label
	&:hover .nav-line
		background: $main_bg_color
.touch #nav-button-label
	&:active .nav-line
		background: $main_bg_color
#nav-button-label
	height: 35px
	width: 50px
	transition: .4s
	margin-top: 6px
	cursor: pointer
	position: relative
	z-index: 1002
	pointer-events: all

.nav-on .nav-line:first-child,
.nav-on .nav-line:last-child
	transition: .5s
	width: 0
	opacity: 0
	left: 50%
	top: 11px
.nav-on
	#nav-button-label
		.nav-line
			margin: 0
	.nav-line
		&:nth-child(2)
			transition: .5s
			transform: rotate(45deg)
		&:nth-child(3)
			transition: .5s
			transform: rotate(-45deg)
label
	display: inline-block
	max-width: 100%
	font-weight: 700

.nav-line
	display: block
	height: 3px
	background: #fff
	position: absolute
	left: 0
	width: 100%
	transition: 2s
	&.active
		background: $main_color
	&:nth-child(2)
		-webkit-transition: .5s
		-o-transition: .5s
		transition: .5s
		top: 14px
	&:nth-child(1)
		-webkit-transition: .5s
		-o-transition: .5s
		transition: .5s
		top: 0
	&:nth-child(4)
		-webkit-transition: .5s
		-o-transition: .5s
		transition: .5s
		top: 28px
	&:nth-child(3)
		-webkit-transition: .5s
		-o-transition: .5s
		transition: .5s
		top: 14px

// внешний вид табов и анимация
.tabs-all-items-wrap
	margin-bottom: 30px
.tabs-items-wrap
	margin-bottom: 10px
.tabs-item
	&.active
		background-color: #fff
		border: 1px solid $main_color
		color: $main_color
.tabs-wrap
	display: none
	padding: 20px
	background-color: rgba(255, 255, 255,0.5)
	&.active
		display: block
		animation: fade-bot
		animation-duration: 0.7s

.tabs-wrap-inner
	display: none
	padding: 20px
	&.active
		display: block
		animation: fade
		animation-delay: 0.3s
		animation-fill-mode: backwards
		animation-duration: 0.7s!important // почему то при build стили объединяются с .tabs-wrap и не работает animation-duration, приходится !important применять
@keyframes fade
	from
		opacity: 0
	to
		opacity: 1
@keyframes fade-bot
	from
		opacity: 0
		transform: translateY(20px)
	to
		opacity: 1
		transform: translateY(0)

